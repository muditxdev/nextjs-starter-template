{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "plugins": ["import"],
  "rules": {
    "no-unused-vars": "error",
    "no-unused-imports": "error",
    "import/no-unused-modules": [1, { "unusedExports": true }]
  }
}
